{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.7/.schema/devbox.schema.json",
  "packages": [
    "nodejs@24.2.0",
    "github:NixOS/nixpkgs/nixos-unstable#zig",
    "odo@latest",
    "bun@latest",
    "k9s@latest",
    "curl@latest",
    "uv@latest",
    "protobuf@latest",
    "docker-compose@latest",
    "kubectl@latest",
    "hurl@latest",
    "zls@latest",
  ],
  "env": {
    "DEVBOX_COREPACK_ENABLED": "true",
  },
  "shell": {
    "init_hook": [
      "export LDFLAGS=\"-L/opt/homebrew/opt/curl/lib\"",
      "export CPPFLAGS=\"-I/opt/homebrew/opt/curl/include\"",
      "export NIX_LDFLAGS=\"$NIX_LDFLAGS $LDFLAGS\"",
      //  "npm install @google/gemini-cli"
    ],
    "scripts": {
      "qwen": [
        "GEMINI_SANDBOX=true ./node_modules/.bin/qwen",
      ],
      "qwen-acp": [
        "GEMINI_SANDBOX=true ./node_modules/.bin/qwen --experimental-acp -m qwen3-coder-plus",
      ],
      "gemini": [
        "GEMINI_SANDBOX=true ./node_modules/.bin/gemini --experimental-acp",
      ],
      "ai-cli-install": [
        "corepack npm install @qwen-code/qwen-code@latest @google/gemini-cli@latest",
      ],
      "test": [
        "echo \"Error: no test specified\" && exit 1",
      ],
    },
  },
}
